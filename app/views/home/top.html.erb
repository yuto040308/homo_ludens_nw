


<!-- 画像貼り付け用の領域-->
<div class="header-image">
    <!-- 上方向（余白）の領域 -->

    <!-- スマホで見た時は表示出来ないようにする -->
    <div class="top-menu-pc">
    <div style="height: 150px;" class="d-flex align-items-center justify-content-center">

        
        <!-- 部分テンプレート読んでみる "_header-menu.html.erb"が呼ばれる -->
        <%= render 'layouts/header-menu' %>
        
    </div>
    </div>



    <!--余白-->
    <div style="height: 130px">
    </div>

    <!-- テキスト領域 -->
    <div>
        <h1 class="text-center text-white top-font">さあ、新しい遊びを教わろう</h1>
        <div class="d-flex align-items-center justify-content-center mt-5">

            <!-- ログイン時は、ボタンを表示しない -->
            <!-- ログイン時 -->
            <% if user_signed_in? %>
            
                <!-- 表示しない -->

            <!-- ログアウト時:表示 -->
            <% else %>
                <!-- スマホの場合は表示しない -->
                <div class="top-pc-button">
                    <!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
                    <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light btn-lg button animsition-link", "data-animsition-out-class": "fade-out-left-sm", data: {"turbolinks" => false} %>
                    <!-- ボタン間のマージン設定：合計15rem -->
                    <span class="mx-5"></span>
                    <span class="mx-5"></span>
                    <span class="mx-5"></span>
                    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-light btn-lg button animsition-link", "data-animsition-out-class": "fade-out-left-sm",data: {"turbolinks" => false} %>
                </div>
                <!-- スマホの場合だけ表示する-->
                <div class="top-sm-button">
                    <!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
                    <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light btn-lg button animsition-link mb-5", "data-animsition-out-class": "fade-out-left-sm", data: {"turbolinks" => false} %>
                    <br>
                    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-light btn-lg button animsition-link", "data-animsition-out-class": "fade-out-left-sm",data: {"turbolinks" => false} %>
                </div>
                
            <% end %>

            <!-- 退会している場合、エラー文を出す -->
            <% if current_user != nil%>
                <% if current_user.resignation_flg == 1 %>
                    <h2 class="text-center text-warning">ユーザーが退会状態です。管理者にご連絡ください。</h1>
                <% end %>
            <% end %>
            
        </div>
        
    </div>

</div>

