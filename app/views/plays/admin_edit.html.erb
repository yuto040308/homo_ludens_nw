<div class="container-fluid">

    <!-- 上部マージン -->
    <div class="h-80"></div>

    <%= form_for @play, url: admin_update_play_path(@play.id) do |f| %>
        <div class="row">
            <div class="col-sm-1"></div>

            <div class="col-sm-10">
                <h1>遊び編集</h1>
                <%= attachment_image_tag @play, :play_image, format: "jpeg", fallback: "/images/no_image.jpg",class: "user-img mx-auto d-block mb-5" %>

                <!-- エラー文を表示させる -->
                <ul>
                    <% @play.errors.full_messages.each do |error| %>
                        <li><%= error %></li>
                    <% end %>
                </ul>

                <!-- 名前:画像の領域 -->
                <div class="row">
                    <!-- 左マージン -->
                    <div class="col-sm-1"></div>

                    <div class="col-sm-4">画像</div>
                    <div class="col-sm-5"><p class="text-center"><%= f.attachment_field :play_image %></p></div>

                    <!-- 右マージン -->
                    <div class="col-sm-2"></div>
                </div>
                <hr>

                <!-- 名前:タイトルの領域 -->
                <div class="row">
                    <!-- 左マージン -->
                    <div class="col-sm-1"></div>

                    <div class="col-sm-4">タイトル<span class="badge badge-warning ml-3">必須</span></div>
                    <div class="col-sm-5">
                        <div class="field form-group">
                            <%= f.text_field :play_title, autofocus: true, class: "form-control" %>
                        </div>
                    </div>
                    <!-- 右マージン -->
                    <div class="col-sm-2"></div>
                </div>
                <hr>

                <!-- ジャンルの領域 -->
                <div class="row">
                    <!-- 左マージン -->
                    <div class="col-sm-1"></div>

                    <div class="col-sm-4">ジャンル<span class="badge badge-warning ml-3">必須</span></div>
                    <div class="col-sm-5">
                        <div class="field form-group">
                            <!-- map関数を使うことによって、カテゴリ名は表示され、value値にはidが入る -->
                            <!-- 第二引数は配列で指定する。[["インドア",1],["アウトドア",2]] -->
                            <!-- 第二引数の1項目目が画面に表示され、2項目目がvalue値にセットされる -->
                            <%= f.select :category_id, @categories.map{|t| [t.category_name, t.id]},class: "form-control" %>
                        </div>
                    </div>

                    <!-- 右マージン -->
                    <div class="col-sm-2"></div>
                </div>
                <hr>

                <!-- 説明の領域 -->
                <div class="row">
                    <!-- 左マージン -->
                    <div class="col-sm-1"></div>

                    <div class="col-sm-4">説明<span class="badge badge-warning ml-3">必須</span></div>
                    <div class="col-sm-5">
                        <div class="field form-group">
                            <%= f.text_area :play_explain, class: "form-control", rows: "15" %>
                        </div>
                    </div>

                    <!-- 右マージン -->
                    <div class="col-sm-2"></div>
                </div>
                <hr>



            </div>

            <div class="col-sm-1"></div>
        </div>

    <%= f.submit "更新", class: "btn btn-outline-warning w-200 mx-auto d-block mt-5" %>

    <% end %>

    <%= button_to "戻る", admin_user_path, class:"btn btn-outline-secondary w-200 mx-auto d-block mt-5", method: :get %>

    <!-- 下マージン -->
    <div class="h-200"></div>
    
</div>

