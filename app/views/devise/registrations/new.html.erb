<div class="container">

  <!-- 上の余白:レスポンシブ対応済み -->
  <div class="devise-margin"></div>

  <div class="row">
    <!-- 左の余白 -->
    <div class="col-1 col-sm-4"></div>

    <!-- コンテンツ部分 -->
    <div class="col-10 col-sm-4">
      <h1 class="text-center mb-4">Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- 入力フォームを横に2分割する -->
        <div>
          <div class="row">

            <!-- 名前（性） -->
            <div class="col-6">
              <div class="field form-group">
                <%= f.label :名前（性） %><span class="badge badge-warning">必須</span><br />
                <%= f.text_field :name_kanji_sei, autofocus: true, autocomplete: "name_kanji_sei",class: "form-control" %>
              </div>
            </div>

            <!-- 名前（名） -->
            <div class="col-6">
              <div class="field form-group">
                <%= f.label :名前（名） %><span class="badge badge-warning">必須</span><br />
                <%= f.text_field :name_kanji_mei, autofocus: true, autocomplete: "name_kanji_mei",class: "form-control" %>
              </div>
            </div>

          </div>
        </div>

        <!-- 入力フォームを横に2分割する -->
        <div>
          <div class="row">

            <!-- 名前（カナ性） -->
            <div class="col-6">
              <div class="field form-group">
                <%= f.label :"カナ セイ　" %><span class="badge badge-warning">必須</span><br />
                <%= f.text_field :name_kana_sei, autofocus: true, autocomplete: "name_kana_sei",class: "form-control" %>
              </div>
            </div>

            <!-- 名前（カナ名） -->
            <div class="col-6">
              <div class="field form-group">
                <%= f.label :"カナ メイ　" %><span class="badge badge-warning">必須</span><br />
                <%= f.text_field :name_kana_mei, autofocus: true, autocomplete: "name_kana_mei",class: "form-control" %>
              </div>
            </div>

          </div>
        </div>

        <!-- ニックネーム -->
        <div class="field form-group">
          <%= f.label :"ニックネーム" %><span class="badge badge-warning ml-2">必須</span><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",class: "form-control" %>
        </div>

        <!-- e-mail:標準 -->
        <div class="field form-group">
          <%= f.label :email %><span class="badge badge-warning ml-2">必須</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
        </div>

        <!-- 電話番号 -->
        <div class="field form-group">
          <%= f.label :"phone-number" %><span class="ml-2">("-"は不要です)</span><span class="badge badge-warning ml-2">必須</span><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", maxlength: "11", class: "form-control" %>
        </div>

        <!-- 支払い方法 -->
        <%= f.label :"支払い方法" %><br />
        <div class="field form-group row">
          <div class="col-12 btn-group" data-toggle="buttons">
            <!-- f.radio_button は <%#=f.radio_button カラム名,テーブルに登録する値%>選択肢の文字 で書く -->
            <label class="btn btn-outline-secondary" style="width:50%">
              <%= f.radio_button :payment_method, 0 %><span class="mr-2"></span>銀行振込
            </label>
            <label class="btn btn-outline-secondary" style="width:50%">
              <%= f.radio_button :payment_method, 1 %><span class="mr-2"></span>クレジットカード
            </label>
          </div>
        </div>

        <!-- パスワード -->
        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><span class="badge badge-warning ml-2">必須</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
        </div>

        <!-- パスワード確認 -->
        <div class="field form-group">
          <%= f.label :password_confirmation %><span class="badge badge-warning ml-2">必須</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
        </div>

        <!-- 登録ボタン -->
        <div class="actions mb-4">
          <%= f.submit "SUBMIT", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    <!-- 右の余白 -->
    <div class="col-1 col-sm-4"></div>
  </div>

  
  </div>
  <!-- 下の余白:レスポンシブ対応済み -->
  <div class="devise-margin"></div>
</div>
