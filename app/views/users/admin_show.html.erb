<div class="container-fluid">

    <!-- 上部マージン -->
    <div class="h-80"></div>

    <div class="row">
        <div class="col-sm-1"></div>

        <div class="col-sm-10">
            <h1 class="headline-font">ユーザー詳細</h1>
            <%= attachment_image_tag @user, :user_image, format: "jpeg", fallback: "/images/no_image.jpg",class: "user-img mx-auto d-block mb-5" %>

            <!-- 名前:漢字の領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">名前(漢字)</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.name_kanji_sei + "　" + @user.name_kanji_mei %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- 名前:カナの領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">名前(カナ)</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.name_kana_sei + "　" + @user.name_kana_mei %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- ニックネームの領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">ニックネーム</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.nickname %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- メールアドレスの領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">メールアドレス</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.email %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- 電話番号の領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">電話番号</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.phone_number %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- 支払い方法の領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">支払方法</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.payment_method_message %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- プロフィールの領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">プロフィール</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.user_profile %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>

            <!-- 会員状態の領域 -->
            <div class="row">
                <!-- 左マージン -->
                <div class="col-sm-1"></div>

                <div class="col-sm-4">会員状態</div>
                <div class="col-sm-5"><p class="text-center"><%= @user.resignation_flg_message %></p></div>

                <!-- 右マージン -->
                <div class="col-sm-2"></div>
            </div>
            <hr>



        </div>

        <div class="col-sm-1"></div>
    </div>

    <!-- button_to: buttonのヘルパー button_toは標準でpostで送られてしまうので、getに指定した。 -->
    <%= button_to "戻る", admin_user_path, class: "btn btn-outline-info w-200 mx-auto d-block mt-5", method: :get %>

    <!-- 下マージン -->
    <div class="h-200"></div>
    
</div>
