<div class="event-img-fix">
    <%= image_tag  "/images/event-index.jpg", class: "event-show-img" %>
    <p class="menu-font">Event Index</p>	
</div>

<div class="container-fluid bg-azure">

    <!-- 上マージン -->
    <div class="event-margin-top"></div>

    <div class="row mx-auto card-width">
        <% @events.each do |event| %>
            <div class="col-12 col-sm-4">
                <div class="card mx-auto mb-4" style="max-width: 23rem;">
                    <!--カード上部にレイアウトされる画像: card-img-top -->
                    <!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
                    <a href="/events/<%= event.id %>" class="animsition-link" data-animsition-out-class="fade-out-left-sm"><%= attachment_image_tag event, :event_image, format: "jpg", class: "card-img-top",size:"190x290" %></a>
                    <!-- カード本文:card-body -->
                    <div class="card-body">
                        <!-- カード見出し:card-title -->
                        <h4 class="card-title headline-font"><%= event.event_title %></h4>
                        
                        <!-- カードの内容文:card-text -->
                        <p class="card-text mb-5"><%= event.event_explain %></p>

                        <!-- カードの副見出し:card-subtitle -->
                        <h6><%= "#" + event.play.play_title %></h6>
                    </div>
                </div>
            </div>
        <% end %>
    </div>


    
    

    <!-- 下マージン -->
    <div class="event-margin-bottom"></div>

</div>

