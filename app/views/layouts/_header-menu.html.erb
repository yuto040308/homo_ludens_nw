
<a href="/"><%= image_tag "/images/logo-white.png" %></a>

<div style="height: 150px; width: 120px;">
</div>

<!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
<h3><%= link_to "PLAY", plays_path, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>
<span class="mx-2"></span>
<!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
<h3 class="mx-5"><%= link_to "EVENT", events_path, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>
<span class="mx-2"></span>

<!-- ログインしていたら、マイページとログアウトもメニューに出す。 -->
<% if user_signed_in? %>

    <!-- 管理者の場合 -->
    <% if current_user.admin_flg == 1 %>

        <!-- 画面遷移のアニメーション化:  classに"animsition-link", "data-animsition-out-class": "fade-out-left-sm"と指定する。 -->
        <h3 class="mr-5"><%= link_to "MYPAGE", admin_user_path, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>

    <!-- ユーザーの場合 -->
    <% else %>

        <h3 class="mr-5"><%= link_to "MYPAGE", user_path(current_user.id), class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>

    <% end %>

    <span class="mx-2"></span>
    <h3><%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>

<!-- ログインしていない場合は、マイページ、ログアウトの代わりに余白を入れる -->
<% else %>

    <h3 class="mr-5"><%= link_to "LOGIN", new_user_session_path, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>
    <span class="mx-2"></span>
    <h3><%= link_to "SIGNUP", new_user_registration_path, class: "menu-a animsition-link", "data-animsition-out-class": "fade-out-left-sm" %></h3>
    <!-- メニューが無くなるので、メニューの横幅分補足する。 -->
    <!--<div style="height: 150px; width: 290px;"></div>-->
<% end %>

<div style="height: 150px; width: 120px;">
</div>

<a class="fas fa-search menu-trigger" href="#"></a>